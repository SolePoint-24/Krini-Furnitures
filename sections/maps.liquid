{% comment %}
  This section displays business address information and a Google Map in a two-column layout.
  It includes settings for address text and repeatable blocks for social media links.
{% endcomment %}

<div class="map-section">
  <div class="page-width">
    <div class="map-section__grid">
      <div class="map-section__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="map-section__heading h2_style_2 title-wrapper title-wrapper--no-top-margin">
            {{ section.settings.heading | escape }}
          </h2>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <h3 class="map-section__subheading">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        {%- if section.settings.address != blank -%}
          <div class="map-section__address rte">
            {{ section.settings.address }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.email != blank -%}
          <p class="map-section__contact">
            <strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
          </p>
        {%- endif -%}

        {%- if section.settings.phone_1 != blank -%}
          <p class="map-section__contact">
             {{ section.settings.phone_1 }}
          </p>
        {%- endif -%}

        {%- if section.settings.phone_2 != blank -%}
          <p class="map-section__contact">
             {{ section.settings.phone_2 }}
          </p>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
          <div class="map-section__socials">
            {%- for block in section.blocks -%}
              <a href="{{ block.settings.link }}" class="map-section__social-link" target="_blank" rel="noopener" aria-label="Follow us on {{ block.settings.platform | capitalize }}">
                {%- liquid
                  assign platform = block.settings.platform
                  case platform
                    when 'facebook'
                      echo '<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M14 13.5h2.5l1-4H14v-2c0-1.03 0-2 2-2h1.5V2.14c-.326-.043-1.557-.14-2.857-.14C11.928 2 10 3.657 10 6.7v2.8H7v4h3V22h4v-8.5z"></path></svg>'
                    when 'instagram'
                      echo '<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122s-.013 3.056-.06 4.122c-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06s-3.056-.013-4.122-.06c-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12s.013-3.056.06-4.122c.05-1.065.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.902 4.902 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 2a8 8 0 1 0 0 16 8 8 0 0 0 0-16zm0 3a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm8.5-2a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"></path></svg>'
                    when 'linkedin'
                      echo '<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M6.94 5a2 2 0 1 1-4-.002 2 2 0 0 1 4 .002zM7 8.48H3V21h4V8.48zm6.32 0H9.34V21h3.94v-6.57c0-3.66 4.77-4 4.77 0V21H22v-7.93c0-6.17-7.06-5.94-8.72-2.91l.04-1.68z"></path></svg>'
                    when 'whatsapp'
                      echo '<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.894 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.886-.001 2.269.655 4.388 1.88 6.138l-.474 1.745 1.789-.466z"></path></svg>'
                endcase
                -%}
              </a>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <div class="map-section__map-wrapper">
        {%- if section.settings.map_embed_code != blank -%}
          {%- liquid
            assign map_src = section.settings.map_embed_code | split: 'src="' | last | split: '"' | first
          -%}
          <iframe
            src="{{ map_src }}"
            class="map-section__iframe"
            frameborder="0"
            scrolling="no"
            allowfullscreen
            loading="lazy"
            aria-label="{{ section.settings.heading | escape | default: 'Map' }}"
          >
          </iframe>
        {%- else -%}
          <div class="map-section__placeholder">
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            <p>Please add a Google Maps embed code in the section settings.</p>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{%- style -%}
  .map-section {
    padding-top: 3rem;
    padding-bottom: 3rem;
  }
  
  .map-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media screen and (min-width: 768px) {
    .map-section__grid {
      /* Creates two columns, the second being 1.5x the first */
      grid-template-columns: 1fr 1.5fr;
    }
  }
  
  .map-section__heading {
    text-align: left;
    margin-bottom: 1rem;
  }
  
  .map-section__subheading {
    margin-top: 0;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }
  
  .map-section__address {
    margin-bottom: 1.5rem;
  }

  .map-section__contact {
    margin: 0.5rem 0;
  }
  
  .map-section__socials {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .map-section__social-link {
    color: inherit;
    opacity: 0.75;
    transition: opacity 0.3s ease;
  }
  .map-section__social-link:hover {
    opacity: 1;
  }
  
  .map-section__map-wrapper {
    width: 100%;
    min-height: 300px;
  }

  .map-section__iframe {
    width: 100%;
    border: 0;
    height: {{ section.settings.height_mobile }}px;
  }
  
  @media screen and (min-width: 768px) {
    .map-section__iframe {
      height: {{ section.settings.height_desktop }}px;
    }
  }

  .map-section__placeholder {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    min-height: 400px;
    background-color: #f7f7f7;
    border: 1px dashed #ccc;
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Map with Address",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Address & Contact"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OUR ADDRESS"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Mumbai"
    },
    {
      "type": "richtext",
      "id": "address",
      "label": "Address",
      "default": "<p><strong>M/s. Krini Furniture Pvt Ltd</strong><br/>Office No. 13 & 14, B Wing, 1st Floor, Sant Bhavan,<br/>Junction of Marve Road And B J Patel Road,<br/>Malad (West), Mumbai 400064.<br/>Maharashtra, India.</p>"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@krini.co.in"
    },
    {
      "type": "text",
      "id": "phone_1",
      "label": "Contact Info Line 1",
      "default": "For enquiries call or WhatsApp: +91-8591489667 / 662"
    },
    {
      "type": "text",
      "id": "phone_2",
      "label": "Contact Info Line 2",
      "default": "For Export Inquiries: +91-8591489671"
    },
    {
      "type": "header",
      "content": "Map Settings"
    },
    {
      "type": "textarea",
      "id": "map_embed_code",
      "label": "Google Maps Embed Code",
      "info": "Paste the HTML iframe code from Google Maps here."
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 300,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Map Height (Desktop)",
      "default": 500
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 300,
      "max": 600,
      "step": 10,
      "unit": "px",
      "label": "Map Height (Mobile)",
      "default": 350
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social Media Link",
      "limit": 5,
      "settings": [
        {
          "type": "select",
          "id": "platform",
          "label": "Platform",
          "options": [
            { "value": "facebook", "label": "Facebook" },
            { "value": "instagram", "label": "Instagram" },
            { "value": "linkedin", "label": "LinkedIn" },
            { "value": "whatsapp", "label": "WhatsApp" }
          ],
          "default": "facebook"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Map with Address"
    }
  ]
}
{% endschema %}