{%- liquid
  assign s = section.settings
  assign container_max_width = 'max-width: ' | append: s.container_width | append: 'px;'
  assign heading_text_alignment = 'text-align: ' | append: s.heading_text_alignment | append: ';'

  assign section_styles = ''
  if s.background_color != 'rgba(0,0,0,0)' and s.background_color != blank
    assign section_styles = section_styles | append: '--color-background: ' | append: s.background_color | append: ';'
  endif
  if s.text_color != 'rgba(0,0,0,0)' and s.text_color != blank
    assign section_styles = section_styles | append: '--color-text: ' | append: s.text_color | append: ';'
    assign section_styles = section_styles | append: '--color-border: ' | append: s.text_color | append: ' | color_modify: "alpha", 0.2;'
  endif
-%}

<section
  class="faq-tab-section color-{{ s.color_scheme }} padding-top-{{ s.padding_top }} padding-bottom-{{ s.padding_bottom }}"
  data-section-id="{{ section.id }}"
  style="{{ section_styles }}"
>
  <div class="container" style="{{ container_max_width }}">
    {%- if s.heading != blank -%}
      <h2
        class="section-heading h2"
        style="{{ heading_text_alignment }} font-size: {{ s.heading_font_size }}px;"
      >
        {{ s.heading | escape }}
      </h2>
    {%- endif -%}

    <div class="faq-tabs">
      {%- for block in section.blocks -%}
        <button
          class="faq-tab-button{% if forloop.first %} active{% endif %}"
          data-tab-target="#faq-panel-{{ block.id }}"
          {{ block.shopify_attributes }}
          style="font-size: {{ s.tab_font_size }}px;"
        >
          {{ block.settings.tab_title | default: 'Category' }}
        </button>
      {%- endfor -%}
    </div>

    <div class="faq-content-panels">
      {%- for block in section.blocks -%}
        <div
          id="faq-panel-{{ block.id }}"
          class="faq-content-panel{% if forloop.first %} active{% endif %}"
        >
          {%- for i in (1..15) -%}
            {%- liquid
              assign q = 'q' | append: i
              assign a = 'a' | append: i
              assign q_value = block.settings[q]
              assign a_value = block.settings[a]
            -%}
            {%- if q_value != blank and a_value != blank -%}
              <details class="faq-item">
                <summary class="faq-question" style="font-size: {{ s.question_font_size }}px;">
                  <span>{{ q_value }}</span>
                  <svg
                    class="icon-plus"
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                  <svg
                    class="icon-minus"
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                </summary>
                <div class="faq-answer rte" style="font-size: {{ s.answer_font_size }}px;">
                  <div class="faq-answer-content">
                    {{ a_value }}
                  </div>
                </div>
              </details>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .padding-top-0 { padding-top: 0; }
  .padding-top-20 { padding-top: 20px; }
  .padding-top-40 { padding-top: 40px; }
  .padding-top-60 { padding-top: 60px; }
  .padding-top-80 { padding-top: 80px; }
  .padding-top-100 { padding-top: 100px; }

  .padding-bottom-0 { padding-bottom: 0; }
  .padding-bottom-20 { padding-bottom: 20px; }
  .padding-bottom-40 { padding-bottom: 40px; }
  .padding-bottom-60 { padding-bottom: 60px; }
  .padding-bottom-80 { padding-bottom: 80px; }
  .padding-bottom-100 { padding-bottom: 100px; }
</style>

{% stylesheet %}
  .faq-tab-section {
    background-color: var(--color-background);
    color: var(--color-text);
  }

  .faq-tab-section .container {
    margin-left: auto;
    margin-right: auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .faq-tab-section .section-heading {
    margin-bottom: 40px;
    /* font-size removed from here */
  }

  .faq-tabs {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    margin-bottom: 30px;
  }

  .faq-tab-button {
    /* font-size removed from here */
    font-weight: 600;
    padding: 10px 20px;
    cursor: pointer;
    border: none;
    background-color: transparent;
    color: var(--color-text, #333);
    opacity: 0.7;
    border-bottom: 3px solid transparent;
    margin-bottom: -1px; /* Align with wrapper border */
    transition: opacity 0.2s ease, border-color 0.2s ease;
  }

  .faq-tab-button:hover {
    opacity: 1;
  }

  .faq-tab-button.active {
    opacity: 1;
    border-color: var(--color-text, #333);
  }

  .faq-content-panel {
    display: none;
  }

  .faq-content-panel.active {
    display: block;
  }

  .faq-item {
    border-bottom: 1px solid var(--color-border, #e5e5e5);
  }

  .faq-question {
    /* font-size removed from here */
    padding: 20px 0;
    cursor: pointer;
    list-style: none; /* Removes default triangle */
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }

  /* Hide native summary marker */
  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-answer {
    padding-left: 16px; /* Indent answer */
    /* font-size removed from here */

    /* --- Animation --- */
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease-out;
  }

  .faq-answer-content {
    /* This inner wrapper allows for padding and overflow control */
    overflow: hidden;
    padding-bottom: 20px;
  }

  .faq-item[open] .faq-answer {
    grid-template-rows: 1fr;
  }

  /* --- Accordion Icons --- */
  .faq-item .icon-plus,
  .faq-item .icon-minus {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-text, #333);
  }

  .faq-item .icon-minus {
    display: none;
  }

  .faq-item[open] .icon-plus {
    display: none;
  }

  .faq-item[open] .icon-minus {
    display: block;
  }
{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sections = document.querySelectorAll('.faq-tab-section');

    sections.forEach((section) => {
      const tabButtons = section.querySelectorAll('.faq-tab-button');
      const contentPanels = section.querySelectorAll('.faq-content-panel');

      tabButtons.forEach((button) => {
        button.addEventListener('click', function () {
          const targetId = this.getAttribute('data-tab-target');
          const targetPanel = section.querySelector(targetId);

          // Remove active state from all buttons and panels in this section
          tabButtons.forEach((btn) => btn.classList.remove('active'));
          contentPanels.forEach((panel) => panel.classList.remove('active'));

          // Add active state to the clicked button and target panel
          this.classList.add('active');
          if (targetPanel) {
            targetPanel.classList.add('active');
          }
        });
      });
    });
  });
</script>

