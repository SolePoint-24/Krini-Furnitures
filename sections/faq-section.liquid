{%- comment -%}
  This section displays a dynamic FAQ with tabs.
  
  !! LAYOUT UPDATED !!
  - This section now uses the same full-width layout as the 'Dynamic Table'.
  - The 'full_width' toggle has been added.
  - The old padding and container_width settings have been removed.
  - The Color Scheme background is now forced to apply.
{%- endcomment -%}

{%- liquid
  assign s = section.settings
  assign heading_text_alignment = 'text-align: ' | append: s.heading_text_alignment | append: ';'

  # Create an inline style to FORCE the background color from the Color Scheme
  assign section_styles = ''
  if s.color_scheme != blank and s.color_scheme.settings.background
    assign bg_color = s.color_scheme.settings.background 
    assign section_styles = 'background-color: ' | append: bg_color | append: ';'
  endif

  # Add custom text color if set
  if s.text_color != 'rgba(0,0,0,0)' and s.text_color != blank
    assign section_styles = section_styles | append: '--color-text: ' | append: s.text_color | append: ';'
    assign section_styles = section_styles | append: '--color-border: ' | append: s.text_color | append: ' | color_modify: "alpha", 0.2;'
  endif
  
  # Add custom tab BG color if set
  if s.tab_bg_color != 'rgba(0,0,0,0)' and s.tab_bg_color != blank
    assign section_styles = section_styles | append: '--color-tab-background: ' | append: s.tab_bg_color | append: ';'
  endif
-%}

{%- comment -%}
  CSS for the section
{%- endcomment -%}
{%- style -%}
  /* ---
    NEW LAYOUT STYLES
    Copied from 'Dynamic Table'
  --- */
  .faq-tab-section-{{ section.id }} {
    padding: 50px 0; /* Vertical padding for the section */
    
    /* Apply custom colors from settings */
    background-color: var(--color-background);
    color: var(--color-text);
  }

  /* This class must be here for the full-width toggle */
  .section--full-width {
    width: 100vw;
    margin-left: calc( (100% - 100vw) / 2 );
  }

  /* This wrapper centers the content and adds horizontal padding */
  .faq-content-wrapper {
    padding: 40px;
    max-width: 1536px; /* Max width of the content */
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .faq-tab-section-{{ section.id }} {
      padding: 30px 0; /* Adjust vertical padding for mobile */
    }
    .faq-content-wrapper {
      padding: 0 20px; /* Adjust horizontal padding for mobile */
    }
  }
  /* --- End of new layout styles --- */


  /* --- Original FAQ Styles --- */
  .faq-tab-section-{{ section.id }} .section-heading {
    margin-bottom: 40px;
    /* font-size removed from here, applied inline */
  }

  .faq-tabs {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    margin-bottom: 30px;
  }

  .faq-tab-button {
    /* font-size removed from here, applied inline */
    font-weight: 600;
    padding: 10px 20px;
    cursor: pointer;
    border: none;
    background-color: var(--color-tab-background, #e0e0e0);
    color: var(--color-text, #333);
    opacity: 0.7;
    border-bottom: none;
    margin-bottom: -1px;
    transition: opacity 0.2s ease;
    border-radius: 5px 5px 0 0;
  }

  .faq-tab-button:hover {
    opacity: 1;
  }

  .faq-tab-button.active {
    opacity: 1;
    border-color: transparent;
  }

  .faq-content-panel {
    display: none;
  }

  .faq-content-panel.active {
    display: block;
  }

  .faq-item {
    border-bottom: 1px solid var(--color-border, #e5e5e5);
    max-width: 750px;        /* Set the width you want for FAQ text */
  margin-left: auto;
  margin-right: auto;
  }

  .faq-question {
    /* font-size removed from here, applied inline */
    padding: 20px 0;
    cursor: pointer;
    list-style: none; /* Removes default triangle */
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
      width: 100%;

  }

  /* Hide native summary marker */
  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-answer {
    padding-left: 16px; /* Indent answer */
    /* font-size removed from here, applied inline */

    /* --- Animation --- */
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease-out;
  }

  .faq-answer-content {
    /* This inner wrapper allows for padding and overflow control */
    overflow: hidden;
    padding-bottom: 20px;
  }

  .faq-item[open] .faq-answer {
    grid-template-rows: 1fr;
  }

  /* --- Accordion Icons --- */
  .faq-item .icon-plus,
  .faq-item .icon-minus {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-text, #333);
  }

  .faq-item .icon-minus {
    display: none;
  }

  .faq-item[open] .icon-plus {
    display: none;
  }

  .faq-item[open] .icon-minus {
    display: block;
  }
{%- endstyle -%}

<section
  class="faq-tab-section-{{ section.id }} section {% if s.full_width %}section--full-width{% endif %}"
  data-section-id="{{ section.id }}"
  style="{{ section_styles }}"
>
  <div class="faq-content-wrapper">
    {%- if s.heading != blank -%}
      <h2
        class="section-heading h2"
        style="{{ heading_text_alignment }} font-size: {{ s.heading_font_size }}px;"
      >
        {{ s.heading | escape }}
      </h2>
    {%- endif -%}

    <div class="faq-tabs">
      {%- for block in section.blocks -%}
        <button
          class="faq-tab-button{% if forloop.first %} active{% endif %}"
          data-tab-target="#faq-panel-{{ block.id }}"
          {{ block.shopify_attributes }}
          style="font-size: {{ s.tab_font_size }}px;"
        >
          {{ block.settings.tab_title | default: 'Category' }}
        </button>
      {%- endfor -%}
    </div>

    <div class="faq-content-panels">
      {%- for block in section.blocks -%}
        <div
          id="faq-panel-{{ block.id }}"
          class="faq-content-panel{% if forloop.first %} active{% endif %}"
        >
          {%- for i in (1..15) -%}
            {%- liquid
              assign q = 'q' | append: i
              assign a = 'a' | append: i
              assign q_value = block.settings[q]
              assign a_value = block.settings[a]
            -%}
            {%- if q_value != blank and a_value != blank -%}
              <details class="faq-item">
                <summary class="faq-question" style="font-size: {{ s.question_font_size }}px;">
                  <p style="margin:0px">{{ q_value }}</p>
                  <svg
                    class="icon-plus"
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                  <svg
                    class="icon-minus"
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                </summary>
                <div class="faq-answer rte" style="font-size: {{ s.answer_font_size }}px;">
                  <div class="faq-answer-content">
                    {{ a_value }}
                  </div>
                </div>
              </details>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>
  </div> </section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sections = document.querySelectorAll('.faq-tab-section');

    sections.forEach((section) => {
      const tabButtons = section.querySelectorAll('.faq-tab-button');
      const contentPanels = section.querySelectorAll('.faq-content-panel');

      tabButtons.forEach((button) => {
        button.addEventListener('click', function () {
          const targetId = this.getAttribute('data-tab-target');
          const targetPanel = section.querySelector(targetId);

          // Remove active state from all buttons and panels in this section
          tabButtons.forEach((btn) => btn.classList.remove('active'));
          contentPanels.forEach((panel) => panel.classList.remove('active'));

          // Add active state to the clicked button and target panel
          this.classList.add('active');
          if (targetPanel) {
            targetPanel.classList.add('active');
          }
        });
      });
    });
  });
</script>

