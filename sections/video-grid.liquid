{% comment %}
  Section: Video Grid
  Displays a title, description, and a grid of clickable YouTube videos that open in a modal.
{% endcomment %}

<div class="section-{{ section.id }} video-grid-section">
  <div class="video-grid-header page-width">
    {% if section.settings.heading != blank %}
      <h2 class="video-grid-heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <div class="video-grid-description rte">
        {{ section.settings.description }}
      </div>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div class="video-grid-container page-width">
      {% for block in section.blocks %}
        <div class="video-grid-item" data-video-url="{{ block.settings.video_url }}" {{ block.shopify_attributes }}>
          <div class="video-thumbnail-wrapper">
            {% if block.settings.custom_thumbnail != blank %}
              <img
                src="{{ block.settings.custom_thumbnail | image_url: width: 500 }}"
                alt="{{ block.settings.custom_thumbnail.alt | default: block.settings.video_title | escape }}"
                width="{{ block.settings.custom_thumbnail.width }}"
                height="{{ block.settings.custom_thumbnail.height }}"
                loading="lazy"
              >
            {% else %}
              {{ 'video' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}

            <div class="video-play-button">
              <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" width="48" height="48"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14.5v-9l6 4.5-6 4.5z" fill="currentColor"/></svg>
            </div>

            {% if block.settings.video_title != blank %}
              <div class="video-title-overlay">
                {{ block.settings.video_title | escape }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

<div id="videoModal-{{ section.id }}" class="video-modal" style="display: none;">
  <div class="video-modal-content">
    <button class="video-modal-close" aria-label="Close video player">&times;</button>
    <div class="video-modal-iframe-container">
      </div>
  </div>
</div>

<style>
  .section-{{ section.id }} {
    padding: 50px 0;
  }

  .video-grid-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .video-grid-heading {
    margin-bottom: 15px;
  }
  
  .video-grid-description p {
    max-width: 800px;
    margin: 0 auto;
  }

  .video-grid-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .video-grid-item {
    cursor: pointer;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .video-thumbnail-wrapper {
    position: relative;
  }

  .video-thumbnail-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .video-grid-item:hover img {
    transform: scale(1.05);
  }
  
  .video-title-overlay {
    position: absolute;
    top: 10px;
    left: 10px;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    padding: 5px 10px;
    font-size: 14px;
    font-weight: 500;
    border-radius: 4px;
    z-index: 2;
  }

  .video-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    color: rgba(255, 255, 255, 0.9);
    pointer-events: none; /* Allows click to go to parent */
    transition: all 0.3s ease;
  }
  
  .video-play-button svg {
    width: 60px;
    height: 60px;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
  }

  .video-grid-item:hover .video-play-button {
    transform: translate(-50%, -50%) scale(1.1);
    color: #fff;
  }

  /* Modal Styles */
  .video-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .video-modal-content {
    position: relative;
    width: 90%;
    max-width: 900px;
  }
  
  .video-modal-iframe-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
  }

  .video-modal-iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .video-modal-close {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: #fff;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    line-height: 1;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .video-grid-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    .page-width {
      padding: 0 20px;
    }
  }

  @media (max-width: 480px) {
    .video-grid-container {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const modal = document.getElementById(`videoModal-${sectionId}`);
    if (!modal) return;
    
    const videoItems = document.querySelectorAll(`.section-${sectionId} .video-grid-item`);
    const modalContent = modal.querySelector('.video-modal-iframe-container');
    const closeModalBtn = modal.querySelector('.video-modal-close');

    videoItems.forEach(item => {
      item.addEventListener('click', function() {
        const videoUrl = this.getAttribute('data-video-url');
        if (!videoUrl) return;

        const videoId = getYouTubeId(videoUrl);
        if (!videoId) {
          console.error('Could not parse YouTube video ID.');
          return;
        }

        // Create iframe with autoplay and other params
        const iframe = document.createElement('iframe');
        iframe.setAttribute('src', `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`);
        iframe.setAttribute('frameborder', '0');
        iframe.setAttribute('allow', 'autoplay; encrypted-media');
        iframe.setAttribute('allowfullscreen', '');
        
        modalContent.innerHTML = ''; // Clear previous video
        modalContent.appendChild(iframe);
        modal.style.display = 'flex';
      });
    });

    function closeModal() {
      modal.style.display = 'none';
      modalContent.innerHTML = ''; // Stop video by removing iframe
    }

    closeModalBtn.addEventListener('click', closeModal);
    
    // Optional: Close modal by clicking on the background
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Helper function to extract YouTube ID
    function getYouTubeId(url) {
      let ID = '';
      url = url.replace(/(>|<)/gi, '').split(/(vi\/|v=|\/v\/|youtu\.be\/|\/embed\/)/);
      if (url[2] !== undefined) {
        ID = url[2].split(/[^0-9a-z_\-]/i);
        ID = ID[0];
      } else {
        ID = url;
      }
      return ID;
    }
  });
</script>

{% schema %}
{
  "name": "Video Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Wall Bed Concepts"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A wall bed, also known as a Murphy bed, is a dual purpose piece of furniture that can help you create a practical space for your home without sacrificing comfort.</p>"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video_title",
          "label": "Video Title",
          "default": "Murphy Bed with Study Desk"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "YouTube Video URL",
          "info": "Paste the full YouTube URL (e.g., https://www.youtube.com/watch?v=...)"
        },
        {
          "type": "image_picker",
          "id": "custom_thumbnail",
          "label": "Custom Thumbnail",
          "info": "500 x 280px (.jpg) recommended. If empty, a placeholder will be used."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Grid",
      "blocks": [
        { "type": "video" },
        { "type": "video" },
        { "type": "video" }
      ]
    }
  ]
}
{% endschema %}