{% doc %}
  @prompt
    generate a visually stunning section for a luxury furniture brand here are the requirements 
    
    *(Use grid or 4-column layout with visuals)*
    
    * **Custom-Built Furniture** – Designed to match each project’s aesthetic and purpose.
    * **Bulk Order Capability** – Perfect for residential and commercial developments.
    * **Space-Saving Solutions** – Smart, compact designs ideal for modern apartments.
    * **Hospitality-Grade Furniture** – Durable, stylish, and engineered for hotels, resorts, and motels.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-luxury-features-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-luxury-features__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-luxury-features__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-luxury-features__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 400;
    letter-spacing: 0.5px;
  }

  .ai-luxury-features__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-luxury-features__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_top_spacing }}px;
  }

  .ai-luxury-features__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-luxury-features__card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, {{ block.settings.accent_color_1 }}, {{ block.settings.accent_color_2 }});
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-luxury-features__card-{{ ai_gen_id }}:hover::before {
    opacity: 1;
  }

  .ai-luxury-features__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .ai-luxury-features__icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, {{ block.settings.icon_bg_color_1 }}, {{ block.settings.icon_bg_color_2 }});
    border-radius: 50%;
    position: relative;
  }

  .ai-luxury-features__icon-{{ ai_gen_id }} {
    width: 60%;
    height: 60%;
    object-fit: contain;
  }

  .ai-luxury-features__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-luxury-features__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-luxury-features__card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    letter-spacing: 0.3px;
  }

  .ai-luxury-features__card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 1024px) {
    .ai-luxury-features__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-luxury-features__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-luxury-features__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.6 }}px;
    }

    .ai-luxury-features__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.6 }}px;
    }

    .ai-luxury-features__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-luxury-features__card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-luxury-features-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 0 {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-luxury-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-luxury-features__container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-luxury-features__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-luxury-features__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-luxury-features__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-luxury-features__grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign feature_enabled_key = 'feature_' | append: i | append: '_enabled'
          assign feature_icon_key = 'feature_' | append: i | append: '_icon'
          assign feature_title_key = 'feature_' | append: i | append: '_title'
          assign feature_description_key = 'feature_' | append: i | append: '_description'

          assign feature_enabled = block.settings[feature_enabled_key]
          assign feature_icon = block.settings[feature_icon_key]
          assign feature_title = block.settings[feature_title_key]
          assign feature_description = block.settings[feature_description_key]
        %}

        {% if feature_enabled %}
          <div class="ai-luxury-features__card-{{ ai_gen_id }}">
            <div class="ai-luxury-features__icon-wrapper-{{ ai_gen_id }}">
              {% if feature_icon != blank %}
                <img
                  src="{{ feature_icon | image_url: width: 200 }}"
                  alt="{{ feature_title | escape }}"
                  class="ai-luxury-features__icon-{{ ai_gen_id }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-luxury-features__icon-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if feature_title != blank %}
              <h3 class="ai-luxury-features__card-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
            {% endif %}

            {% if feature_description != blank %}
              <div class="ai-luxury-features__card-description-{{ ai_gen_id }}">{{ feature_description }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

