{%- comment -%}
  ** Social Share Block **
  - Renders a row of social media share icons with inline SVGs.
  - The visibility of each icon is controlled by checkboxes in the block settings.
{%- endcomment -%}

{%- liquid
  assign product_url = product.url
  assign product_title = product.title | url_encode
-%}

<div class="custom-social-sharing" {{ block.shopify_attributes }}>
  {%- if block.settings.title != blank -%}
    <span class="social-sharing-title">{{ block.settings.title | escape }}</span>
  {%- endif -%}

  {%- if block.settings.share_facebook -%}
    <a
      href="https://www.facebook.com/sharer/sharer.php?u={{ product_url }}"
      class="social-sharing-link"
      target="_blank"
      rel="noopener"
      aria-label="Share on Facebook"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
      </svg>
    </a>
  {%- endif -%}

  {%- if block.settings.share_X -%}
    <a
      href="https://x.com/intent/post?text={{ product_title }}&url={{ product_url }}"
      class="social-sharing-link"
      target="_blank"
      rel="noopener"
      aria-label="Share on Twitter"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024" fill="currentColor" fillRule="evenodd">
        <path d="M818 800 498.11 333.745l.546.437L787.084 0h-96.385L455.738 272 269.15 0H16.367l298.648 435.31-.036-.037L0 800h96.385l261.222-302.618L565.217 800zM230.96 72.727l448.827 654.546h-76.38L154.217 72.727z" transform="translate(103 112)"/>
      </svg>
    </a>
  {%- endif -%}

  {%- if block.settings.share_pinterest -%}
    {%- assign product_image = product.featured_image | image_url: width: 1024 -%}
    <a
      href="https://pinterest.com/pin/create/button/?url={{ product_url }}&media={{ product_image }}&description={{ product_title }}"
      class="social-sharing-link"
      target="_blank"
      rel="noopener"
      aria-label="Pin on Pinterest"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.117.223.084.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.318.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
      </svg>
    </a>
  {%- endif -%}

  {%- if block.settings.share_whatsapp -%}
    <a
      href="https://wa.me/?text={{ product_title | append: '%20' | append: product_url }}"
      class="social-sharing-link"
      target="_blank"
      rel="noopener"
      aria-label="Share on WhatsApp"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.894 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.886-.001 2.267.655 4.398 1.907 6.18l-1.03 3.75 3.824-1.003zm4.905-6.492c-.342-.172-2.022-.994-2.336-1.106-.312-.112-.538-.172-.764.172-.227.344-.886 1.106-1.085 1.332-.199.227-.398.257-.74.085-.342-.173-1.44- .53-2.748-1.69-1.025-.902-1.72-2.023-1.919-2.369-.199-.344-.025-.539.147-.71.159-.16.342-.42.513-.639.172-.219.227-.363.34-.604.112-.241.057-.448-.028-.618-.085-.172-.764-1.84-1.044-2.529-.272-.666-.547-.572-.764-.572-.21 0-.447-.028-.672-.028-.225 0-.59.086-.899.448-.309.363-1.189 1.162-1.189 2.842s1.217 3.303 1.384 3.53.057.227 2.336 3.438 3.12 2.27 4.225 2.67.9.363 1.199.308c.595-.112 2.022-1.226 2.308-1.523.286-.296.286-.562.199-.71-.086-.148-.342-.257-.684-.429z"/>
      </svg>
    </a>
  {%- endif -%}

  {%- if block.settings.share_linkedin -%}
    <a
      href="https://www.linkedin.com/shareArticle?mini=true&url={{ product_url }}&title={{ product_title }}"
      class="social-sharing-link"
      target="_blank"
      rel="noopener"
      aria-label="Share on LinkedIn"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
      </svg>
    </a>
  {%- endif -%}
</div>

<style>
  .custom-social-sharing {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  .social-sharing-title {
    margin-right: 5px;
    font-size: 0.8rem;
  }
  .social-sharing-link .icon {
    width: 1rem;
    height: 1rem;
    fill: currentColor;
    opacity: 0.75;
    transition: opacity 0.3s ease;
  }
  .social-sharing-link:hover .icon {
    opacity: 1;
  }
</style>

{% schema %}
{
  "name": "Social Share",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Share:"
    },
    {
      "type": "header",
      "content": "Enable Social Platforms"
    },
    {
      "type": "checkbox",
      "id": "share_facebook",
      "label": "Facebook",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share_X",
      "label": "X",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share_pinterest",
      "label": "Pinterest",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share_whatsapp",
      "label": "WhatsApp",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share_linkedin",
      "label": "LinkedIn",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Social Share",
      "category": "t:categories.custom"
    }
  ]
}
{% endschema %}
