{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-catalog-download-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    text-align: center;
  }

  .ai-catalog-download__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
  }

  .ai-catalog-download__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
  }

  .ai-catalog-download__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
  }

  .ai-catalog-download__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-catalog-download__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-catalog-download__button-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
  }

  .ai-catalog-download__modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    /* Increased z-index significantly to ensure it sits on top of sticky headers */
    z-index: 2147483647; 
    align-items: center;
    justify-content: center;
    padding: 20px;
    backdrop-filter: blur(2px);
  }

  .ai-catalog-download__modal-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-catalog-download__modal-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.modal_bg_color }};
    border-radius: {{ block.settings.modal_radius }}px;
    max-width: {{ block.settings.modal_width }}px;
    width: 100%;
    /* Adjusted max-height to ensure it doesn't touch screen edges */
    max-height: 85vh; 
    overflow-y: auto;
    position: relative;
    padding: 30px; /* Reduced padding slightly for better fit */
    box-shadow: 0 10px 40px rgba(0,0,0,0.2); /* Added shadow for depth */
  }

  .ai-catalog-download__modal-close-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    transition: opacity 0.3s ease;
    z-index: 10;
  }

  .ai-catalog-download__modal-close-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  .ai-catalog-download__modal-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: 24px;
    margin: 0 0 8px;
    padding-right: 20px; /* Prevent overlap with close button */
  }

  .ai-catalog-download__modal-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 15px;
    margin: 0 0 20px;
  }

  .ai-catalog-download__form-container-{{ ai_gen_id }} {
    margin-bottom: 20px;
  }

  /* STYLES FOR THE FORM INPUTS */
  .ai-catalog-form-field {
    margin-bottom: 12px;
  }
  
  .ai-catalog-form-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-size: 14px;
    color: #333;
    background-color: #f9f9f9;
    transition: border-color 0.2s;
  }

  .ai-catalog-form-input:focus {
    border-color: #333;
    background-color: #fff;
    outline: none;
  }

  .ai-catalog-form-submit {
    width: 100%;
    padding: 14px;
    background-color: #333;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    margin-top: 8px;
    transition: background-color 0.2s;
  }
  .ai-catalog-form-submit:hover {
    background-color: #555;
  }

  .ai-catalog-download__download-section-{{ ai_gen_id }} {
    padding-top: 20px;
    border-top: 1px solid #e6e6e6;
    text-align: center;
  }

  .ai-catalog-download__download-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    margin: 0 0 12px;
  }

  .ai-catalog-download__download-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: {{ block.settings.download_btn_bg }};
    color: {{ block.settings.download_btn_text }};
    border: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-catalog-download__download-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.download_btn_hover_bg }};
    color: {{ block.settings.download_btn_hover_text }};
  }

  @media screen and (max-width: 749px) {
    .ai-catalog-download__modal-content-{{ ai_gen_id }} {
      padding: 20px;
      max-height: 90vh;
    }

    .ai-catalog-download__modal-heading-{{ ai_gen_id }} {
      font-size: 20px;
    }

    .ai-catalog-download__button-{{ ai_gen_id }} {
      padding: 14px 24px;
    }
  }
{% endstyle %}

<catalog-download-{{ ai_gen_id }}
  class="ai-catalog-download-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-catalog-download__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-catalog-download__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-catalog-download__description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    <button
      class="ai-catalog-download__button-{{ ai_gen_id }}"
      data-modal-trigger
      aria-label="{{ block.settings.button_text }}"
    >
      <svg
        class="ai-catalog-download__button-icon-{{ ai_gen_id }}"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      {{ block.settings.button_text }}
    </button>
  </div>

  <div
    class="ai-catalog-download__modal-{{ ai_gen_id }}"
    data-modal
    aria-hidden="true"
  >
    <div class="ai-catalog-download__modal-content-{{ ai_gen_id }}">
      <button
        class="ai-catalog-download__modal-close-{{ ai_gen_id }}"
        data-modal-close
        aria-label="Close"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>

      <h3 class="ai-catalog-download__modal-heading-{{ ai_gen_id }}">
        {{ block.settings.modal_heading }}
      </h3>

      <p class="ai-catalog-download__modal-text-{{ ai_gen_id }}">
        {{ block.settings.modal_description }}
      </p>

      <div class="ai-catalog-download__form-container-{{ ai_gen_id }}">
        <!-- Replaced the broken snippet with a native Shopify contact form -->
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <p style="color: green; margin-bottom: 10px;">Thank you! You can download the catalog below.</p>
          {% elsif form.errors %}
            <div style="color: red; margin-bottom: 10px;">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="ai-catalog-form-field">
            <input type="text" 
                   name="contact[name]" 
                   id="ContactFormName-{{ ai_gen_id }}" 
                   class="ai-catalog-form-input" 
                   placeholder="Name">
          </div>
          
          <div class="ai-catalog-form-field">
            <input type="email" 
                   name="contact[email]" 
                   id="ContactFormEmail-{{ ai_gen_id }}" 
                   class="ai-catalog-form-input" 
                   placeholder="Email">
          </div>

          <div class="ai-catalog-form-field">
            <input type="tel" 
                   name="contact[phone]" 
                   id="ContactFormPhone-{{ ai_gen_id }}" 
                   class="ai-catalog-form-input" 
                   placeholder="Mobile">
          </div>

          <div class="ai-catalog-form-field">
            <input type="text" 
                   name="contact[company]" 
                   id="ContactFormCompany-{{ ai_gen_id }}" 
                   class="ai-catalog-form-input" 
                   placeholder="Company Name">
          </div>

          <button type="submit" class="ai-catalog-form-submit">
            Send Information (Optional)
          </button>
        {% endform %}
      </div>

      <div class="ai-catalog-download__download-section-{{ ai_gen_id }}">
        <p class="ai-catalog-download__download-text-{{ ai_gen_id }}">
          {{ block.settings.download_text }}
        </p>
        {% if block.settings.pdf_url != blank %}
          <a
            href="{{ block.settings.pdf_url }}"
            class="ai-catalog-download__download-button-{{ ai_gen_id }}"
            download
            target="_blank"
          >
            <svg
              width="20"
              height="20"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="12" y1="18" x2="12" y2="12"></line>
              <line x1="9" y1="15" x2="15" y2="15"></line>
            </svg>
            {{ block.settings.download_btn_label }}
          </a>
        {% else %}
          <div style="padding: 10px; background: #f0f0f0; color: #666; border-radius: 4px;">
            Please add your PDF URL in the block settings
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</catalog-download-{{ ai_gen_id }}>

<script>
  (function() {
    class CatalogDownload{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.modal = this.querySelector('[data-modal]');
        this.modalTrigger = this.querySelector('[data-modal-trigger]');
        this.modalClose = this.querySelector('[data-modal-close]');

        this.setupEventListeners();
        
        // Check if form was posted successfully to keep modal open
        if(window.location.href.indexOf('contact_posted=true') > -1) {
             this.openModal();
        }
      }

      setupEventListeners() {
        if (this.modalTrigger) {
          this.modalTrigger.addEventListener('click', () => {
            this.openModal();
          });
        }

        if (this.modalClose) {
          this.modalClose.addEventListener('click', () => {
            this.closeModal();
          });
        }

        if (this.modal) {
          this.modal.addEventListener('click', (e) => {
            if (e.target === this.modal) {
              this.closeModal();
            }
          });
        }

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeModal();
          }
        });
      }

      openModal() {
        this.modal.classList.add('active');
        this.modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        this.modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }
    }

    customElements.define('catalog-download-{{ ai_gen_id }}', CatalogDownload{{ ai_gen_id }});
  })();
</script>

