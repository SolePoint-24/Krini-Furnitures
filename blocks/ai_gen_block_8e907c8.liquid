{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-catalog-download-{{ ai_gen_id }} {
    padding: {{ section.settings.padding }}px;
    text-align: center;
  }

  .ai-catalog-download__content-{{ ai_gen_id }} {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
  }

  .ai-catalog-download__heading-{{ ai_gen_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin: 0 0 16px;
  }

  .ai-catalog-download__description-{{ ai_gen_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    margin: 0 0 24px;
  }

  .ai-catalog-download__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-catalog-download__button-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  /* Modal Styles */
  .ai-catalog-download__modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 2147483647; 
    align-items: center;
    justify-content: center;
    padding: 20px;
    backdrop-filter: blur(2px);
  }

  .ai-catalog-download__modal-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-catalog-download__modal-content-{{ ai_gen_id }} {
    background-color: {{ section.settings.modal_bg_color }};
    border-radius: {{ section.settings.modal_radius }}px;
    max-width: {{ section.settings.modal_width }}px;
    width: 100%;
    max-height: 85vh; 
    overflow-y: auto;
    position: relative;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
  }

  .ai-catalog-download__modal-close-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    transition: opacity 0.3s ease;
    z-index: 10;
  }

  .ai-catalog-download__modal-close-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  .ai-catalog-download__modal-heading-{{ ai_gen_id }} {
    color: {{ section.settings.heading_color }};
    font-size: 24px;
    margin: 0 0 8px;
    padding-right: 20px;
  }

  .ai-catalog-download__modal-text-{{ ai_gen_id }} {
    color: {{ section.settings.text_color }};
    font-size: 15px;
    margin: 0 0 20px;
  }

  /* Form Styles */
  .ai-catalog-form-field {
    margin-bottom: 12px;
  }
  
  .ai-catalog-form-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-size: 14px;
    color: #333;
    background-color: #f9f9f9;
    transition: border-color 0.2s;
  }

  .ai-catalog-form-input:focus {
    border-color: #333;
    background-color: #fff;
    outline: none;
  }

  .ai-catalog-form-submit {
    width: 100%;
    padding: 14px;
    background-color: #333;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    margin-top: 8px;
    transition: background-color 0.2s;
  }
  .ai-catalog-form-submit:hover {
    background-color: #555;
  }

  /* SKIP BUTTON STYLES */
  .ai-catalog-skip-container {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
    text-align: center;
  }

  .ai-catalog-skip-text {
    font-size: 13px;
    color: #666;
    margin-bottom: 8px;
  }

  .ai-catalog-skip-button {
    display: inline-block;
    font-size: 14px;
    color: {{ section.settings.heading_color }};
    text-decoration: underline;
    cursor: pointer;
    background: none;
    border: none;
    padding: 5px;
  }
  
  .ai-catalog-skip-button:hover {
    color: #555;
  }

  /* Success Message */
  .ai-catalog-success-message {
    text-align: center;
    padding: 20px;
    background-color: #f4f9f0;
    border-radius: 8px;
    color: #2e7d32;
    margin-bottom: 20px;
  }

  .ai-catalog-download__download-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background-color: {{ section.settings.download_btn_bg }};
    color: {{ section.settings.download_btn_text }};
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    margin-top: 10px;
  }

  @media screen and (max-width: 749px) {
    .ai-catalog-download__modal-content-{{ ai_gen_id }} {
      padding: 20px;
      max-height: 90vh;
    }
  }
{% endstyle %}

<catalog-download-{{ ai_gen_id }}
  class="ai-catalog-download-{{ ai_gen_id }}"
>
  <div class="ai-catalog-download__content-{{ ai_gen_id }}">
    {% if section.settings.heading != blank %}
      <h2 class="ai-catalog-download__heading-{{ ai_gen_id }}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="ai-catalog-download__description-{{ ai_gen_id }}">
        {{ section.settings.description }}
      </div>
    {% endif %}

    <button
      class="ai-catalog-download__button-{{ ai_gen_id }}"
      data-modal-trigger
      aria-label="{{ section.settings.button_text }}"
    >
      <svg
        class="ai-catalog-download__button-icon-{{ ai_gen_id }}"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      {{ section.settings.button_text }}
    </button>
  </div>

  <div
    class="ai-catalog-download__modal-{{ ai_gen_id }}"
    data-modal
    aria-hidden="true"
  >
    <div class="ai-catalog-download__modal-content-{{ ai_gen_id }}">
      <button
        class="ai-catalog-download__modal-close-{{ ai_gen_id }}"
        data-modal-close
        aria-label="Close"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>

      <h3 class="ai-catalog-download__modal-heading-{{ ai_gen_id }}">
        {{ section.settings.modal_heading }}
      </h3>

      <p class="ai-catalog-download__modal-text-{{ ai_gen_id }}">
        {{ section.settings.modal_description }}
      </p>

      <div class="ai-catalog-download__form-container-{{ ai_gen_id }}">
        
        {% comment %} 
          LOGIC: Check if user provided Shopify Form App Embed Code 
        {% endcomment %}
        
        {% if section.settings.app_form_html != blank %}
          <!-- RENDER SHOPIFY FORM APP EMBED -->
          <div class="ai-catalog-app-embed">
            {{ section.settings.app_form_html }}
          </div>
        {% else %}
          <!-- RENDER NATIVE FALLBACK FORM -->
          {% form 'contact' %}
            {% if form.posted_successfully? %}
              <div class="ai-catalog-success-message">
                <p>Thank you! Here is your catalog.</p>
              </div>
              <!-- Show Download Button immediately on success -->
              <div style="text-align: center;">
                 {% if section.settings.pdf_url != blank %}
                  <a href="{{ section.settings.pdf_url }}" class="ai-catalog-download__download-button-{{ ai_gen_id }}" download target="_blank">
                    Download PDF
                  </a>
                {% else %}
                  <p>Please configure PDF URL in section settings.</p>
                {% endif %}
              </div>
            {% else %}
              <input type="hidden" name="contact[tags]" value="catalog-download, prospect">
              
              <div class="ai-catalog-form-field">
                <input type="text" name="contact[name]" class="ai-catalog-form-input" placeholder="Name">
              </div>
              <div class="ai-catalog-form-field">
                <input type="email" name="contact[email]" class="ai-catalog-form-input" placeholder="Email (Required for registration)" required>
              </div>
              <div class="ai-catalog-form-field">
                <input type="tel" name="contact[phone]" class="ai-catalog-form-input" placeholder="Mobile">
              </div>
              <div class="ai-catalog-form-field">
                <input type="text" name="contact[company]" class="ai-catalog-form-input" placeholder="Company Name">
              </div>
              <button type="submit" class="ai-catalog-form-submit">Register & Download</button>
            {% endif %}
          {% endform %}
        {% endif %}

      </div>

      <!-- 
        SKIP / DIRECT DOWNLOAD OPTION 
        This shows up regardless of whether you use the App Form or Native Form
        This satisfies the "If user don't want [to fill form]" requirement.
      -->
      {% if section.settings.pdf_url != blank %}
        <div class="ai-catalog-skip-container">
          <p class="ai-catalog-skip-text">Don't want to register?</p>
          <a href="{{ section.settings.pdf_url }}" class="ai-catalog-skip-button" download target="_blank">
            Skip and Download PDF directly
          </a>
        </div>
      {% endif %}

    </div>
  </div>
</catalog-download-{{ ai_gen_id }}>

<script>
  (function() {
    class CatalogDownload{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.modal = this.querySelector('[data-modal]');
        this.modalTrigger = this.querySelector('[data-modal-trigger]');
        this.modalClose = this.querySelector('[data-modal-close]');

        this.setupEventListeners();
        
        // Check if native form was posted successfully
        if(window.location.href.indexOf('contact_posted=true') > -1) {
             this.openModal();
        }
      }

      setupEventListeners() {
        if (this.modalTrigger) {
          this.modalTrigger.addEventListener('click', () => {
            this.openModal();
          });
        }

        if (this.modalClose) {
          this.modalClose.addEventListener('click', () => {
            this.closeModal();
          });
        }

        if (this.modal) {
          this.modal.addEventListener('click', (e) => {
            if (e.target === this.modal) {
              this.closeModal();
            }
          });
        }

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeModal();
          }
        });
      }

      openModal() {
        this.modal.classList.add('active');
        this.modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        this.modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }
    }

    customElements.define('catalog-download-{{ ai_gen_id }}', CatalogDownload{{ ai_gen_id }});
  })();
</script>

