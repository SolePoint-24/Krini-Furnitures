<country-carousel-{{ ai_gen_id }} class="ai-country-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-country-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-country-carousel__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-country-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-country-carousel__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-country-carousel__wrapper-{{ ai_gen_id }}">
      <button
        class="ai-country-carousel__nav-button-{{ ai_gen_id }} ai-country-carousel__nav-button--prev-{{ ai_gen_id }}"
        aria-label="Previous countries"
        data-direction="prev"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-country-carousel__track-{{ ai_gen_id }}">
        {% for i in (1..10) %}
          {% liquid
            assign country_enabled_key = 'country_' | append: i | append: '_enabled'
            assign country_name_key = 'country_' | append: i | append: '_name'
            assign country_flag_key = 'country_' | append: i | append: '_flag'

            assign country_enabled = block.settings[country_enabled_key]
            assign country_name = block.settings[country_name_key]
            assign country_flag = block.settings[country_flag_key]
          %}

          {% if country_enabled %}
            <div class="ai-country-carousel__card-{{ ai_gen_id }}">
              <div class="ai-country-carousel__flag-wrapper-{{ ai_gen_id }}">
                {% if country_flag != blank %}
                  <img
                    src="{{ country_flag | image_url: width: 400 }}"
                    alt="{{ country_name | escape }}"
                    class="ai-country-carousel__flag-{{ ai_gen_id }}"
                    loading="lazy"
                    width="400"
                    height="{{ block.settings.flag_height }}"
                  >
                {% else %}
                  <div class="ai-country-carousel__flag-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              {% if country_name != blank %}
                <h3 class="ai-country-carousel__country-name-{{ ai_gen_id }}">{{ country_name }}</h3>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <button
        class="ai-country-carousel__nav-button-{{ ai_gen_id }} ai-country-carousel__nav-button--next-{{ ai_gen_id }}"
        aria-label="Next countries"
        data-direction="next"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</country-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class CountryCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-country-carousel__track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-country-carousel__nav-button--prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-country-carousel__nav-button--next-{{ ai_gen_id }}');
        this.scrollAmount = {{ block.settings.card_width | plus: block.settings.card_gap }};
      }

      connectedCallback() {
        this.setupEventListeners();
        this.updateButtonStates();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.scroll('prev'));
        this.nextButton.addEventListener('click', () => this.scroll('next'));
        this.track.addEventListener('scroll', () => this.updateButtonStates());
      }

      scroll(direction) {
        const scrollDistance = direction === 'next' ? this.scrollAmount : -this.scrollAmount;
        this.track.scrollBy({
          left: scrollDistance,
          behavior: 'smooth'
        });
      }

      updateButtonStates() {
        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.clientWidth >= this.track.scrollWidth - 1;

        this.prevButton.disabled = isAtStart;
        this.nextButton.disabled = isAtEnd;
      }
    }

    customElements.define('country-carousel-{{ ai_gen_id }}', CountryCarousel{{ ai_gen_id }});
  })();
</script>

