<video-gallery-{{ ai_gen_id }} class="ai-video-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-gallery-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <div class="ai-video-gallery-header-{{ ai_gen_id }}">
        <h2 class="ai-video-gallery-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      </div>
    {% endif %}

    {% assign has_collections = false %}
    {% for i in (1..5) %}
      {% assign collection_key = 'collection_' | append: i %}
      {% assign collection = block.settings[collection_key] %}
      {% if collection != blank %}
        {% assign has_collections = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_collections %}
      <div class="ai-video-gallery-tabs-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% assign collection_key = 'collection_' | append: i %}
          {% assign collection = block.settings[collection_key] %}
          {% if collection != blank %}
            <button
              class="ai-video-gallery-tab-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
              data-tab="{{ i }}"
              aria-label="View {{ collection.title }}"
            >
              {{ collection.title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      {% for i in (1..5) %}
        {% assign collection_key = 'collection_' | append: i %}
        {% assign video_1_key = 'collection_' | append: i | append: '_video_1' %}
        {% assign video_2_key = 'collection_' | append: i | append: '_video_2' %}
        {% assign video_3_key = 'collection_' | append: i | append: '_video_3' %}
        {% assign video_4_key = 'collection_' | append: i | append: '_video_4' %}
        {% assign video_5_key = 'collection_' | append: i | append: '_video_5' %}

        {% assign collection = block.settings[collection_key] %}
        {% assign video_1 = block.settings[video_1_key] %}
        {% assign video_2 = block.settings[video_2_key] %}
        {% assign video_3 = block.settings[video_3_key] %}
        {% assign video_4 = block.settings[video_4_key] %}
        {% assign video_5 = block.settings[video_5_key] %}

        {% if collection != blank %}
          <div
            class="ai-video-gallery-content-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
            data-content="{{ i }}"
          >
            <div class="ai-video-gallery-layout-{{ ai_gen_id }}">
              <div class="ai-video-gallery-main-{{ ai_gen_id }}">
                <div class="ai-video-gallery-player-{{ ai_gen_id }}" data-player="{{ i }}">
                  {% if video_1 != blank %}
                    <iframe
                      src="https://www.youtube.com/embed/{{ video_1 }}"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                      loading="lazy"
                    ></iframe>
                  {% else %}
                    <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #ffffff;">
                      Add a YouTube video ID
                    </div>
                  {% endif %}
                </div>

                <div class="ai-video-gallery-description-{{ ai_gen_id }}">
                  <h3 class="ai-video-gallery-collection-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                  {% if collection.description != blank %}
                    <div class="ai-video-gallery-collection-desc-{{ ai_gen_id }}">
                      {{ collection.description }}
                    </div>
                  {% endif %}
                </div>
              </div>

              <div class="ai-video-gallery-sidebar-{{ ai_gen_id }}">
                {% assign videos = video_1 | append: ',' | append: video_2 | append: ',' | append: video_3 | append: ',' | append: video_4 | append: ',' | append: video_5 | split: ',' %}
                {% for video_id in videos %}
                  {% if video_id != blank %}
                    <div
                      class="ai-video-gallery-thumbnail-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                      data-video="{{ video_id }}"
                      data-collection="{{ i }}"
                    >
                      <div class="ai-video-gallery-thumb-image-{{ ai_gen_id }}">
                        <img
                          src="https://img.youtube.com/vi/{{ video_id }}/mqdefault.jpg"
                          alt="Video thumbnail"
                          loading="lazy"
                        >
                      </div>
                      <div class="ai-video-gallery-thumb-info-{{ ai_gen_id }}">
                        <div class="ai-video-gallery-thumb-title-{{ ai_gen_id }}">
                          Video {{ forloop.index }}
                        </div>
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    {% else %}
      <div class="ai-video-gallery-empty-{{ ai_gen_id }}">
        {{ 'collection' | placeholder_svg_tag }}
        <p>Select collections and add YouTube video IDs to get started</p>
      </div>
    {% endif %}
  </div>
</video-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-video-gallery-tab-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-video-gallery-content-{{ ai_gen_id }}');
        this.thumbnails = this.querySelectorAll('.ai-video-gallery-thumbnail-{{ ai_gen_id }}');

        this.setupTabs();
        this.setupThumbnails();
      }

      setupTabs() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');

            this.tabs.forEach((t) => t.classList.remove('active'));
            this.contents.forEach((c) => c.classList.remove('active'));

            tab.classList.add('active');
            const content = this.querySelector(`[data-content="${tabId}"]`);
            if (content) {
              content.classList.add('active');
            }
          });
        });
      }

      setupThumbnails() {
        this.thumbnails.forEach((thumbnail) => {
          thumbnail.addEventListener('click', () => {
            const videoId = thumbnail.getAttribute('data-video');
            const collectionId = thumbnail.getAttribute('data-collection');
            const player = this.querySelector(`[data-player="${collectionId}"]`);

            const collectionThumbnails = this.querySelectorAll(
              `.ai-video-gallery-thumbnail-{{ ai_gen_id }}[data-collection="${collectionId}"]`
            );
            collectionThumbnails.forEach((t) => t.classList.remove('active'));
            thumbnail.classList.add('active');

            if (player) {
              const iframe = player.querySelector('iframe');
              if (iframe) {
                iframe.src = `https://www.youtube.com/embed/${videoId}`;
              }
            }
          });
        });
      }
    }

    customElements.define('video-gallery-{{ ai_gen_id }}', VideoGallery{{ ai_gen_id }});
  })();
</script>

