{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-work-with-container-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-work-with-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-work-with-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-work-with-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .ai-work-with-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.item_gap }}px;
    padding: {{ block.settings.item_padding }}px 0;
  }

  .ai-work-with-item-{{ ai_gen_id }}:not(:last-child) {
    border-bottom: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
  }

  .ai-work-with-flag-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.flag_width }}px;
    height: {{ block.settings.flag_height }}px;
    border-radius: {{ block.settings.flag_border_radius }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-work-with-flag-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-work-with-flag-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e6e6e6;
    color: #999;
    font-size: 12px;
  }

  .ai-work-with-details-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-work-with-country-{{ ai_gen_id }} {
    font-size: {{ block.settings.country_size }}px;
    font-weight: {{ block.settings.country_weight }};
    color: {{ block.settings.country_color }};
    margin-bottom: {{ block.settings.country_spacing }}px;
  }

  .ai-work-with-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    color: {{ block.settings.description_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-work-with-container-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px {{ block.settings.section_padding_horizontal | times: 0.7 }}px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-work-with-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: {{ block.settings.heading_spacing | times: 0.8 }}px;
    }

    .ai-work-with-item-{{ ai_gen_id }} {
      gap: {{ block.settings.item_gap | times: 0.7 }}px;
      padding: {{ block.settings.item_padding | times: 0.8 }}px 0;
    }

    .ai-work-with-flag-{{ ai_gen_id }} {
      width: {{ block.settings.flag_width | times: 0.8 }}px;
      height: {{ block.settings.flag_height | times: 0.8 }}px;
    }

    .ai-work-with-country-{{ ai_gen_id }} {
      font-size: {{ block.settings.country_size | times: 0.9 }}px;
    }

    .ai-work-with-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-work-with-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-work-with-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-work-with-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-work-with-list-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign enabled_key = 'country_' | append: i | append: '_enabled'
          assign country_key = 'country_' | append: i | append: '_name'
          assign flag_key = 'country_' | append: i | append: '_flag'
          assign description_key = 'country_' | append: i | append: '_description'

          assign enabled = block.settings[enabled_key]
          assign country_name = block.settings[country_key]
          assign flag_image = block.settings[flag_key]
          assign description = block.settings[description_key]
        %}

        {% if enabled %}
          <div class="ai-work-with-item-{{ ai_gen_id }}">
            <div class="ai-work-with-flag-{{ ai_gen_id }}">
              {% if flag_image %}
                <img
                  src="{{ flag_image | image_url: width: 200 }}"
                  alt="{{ country_name | escape }}"
                  loading="lazy"
                  width="200"
                  height="150"
                >
              {% else %}
                <div class="ai-work-with-flag-placeholder-{{ ai_gen_id }}">
                  Flag
                </div>
              {% endif %}
            </div>

            <div class="ai-work-with-details-{{ ai_gen_id }}">
              {% if country_name != blank %}
                <div class="ai-work-with-country-{{ ai_gen_id }}">{{ country_name }}</div>
              {% endif %}
              {% if description != blank %}
                <div class="ai-work-with-description-{{ ai_gen_id }}">{{ description }}</div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

