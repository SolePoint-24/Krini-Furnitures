{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-image-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-blog-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-blog-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
    background-color: {{ block.settings.placeholder_bg }};
  }

  .ai-blog-image-wrapper-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_bg }};
  }

  .ai-blog-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-blog-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      {{ block.settings.overlay_direction }},
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }}) 100%
    );
    pointer-events: none;
  }

  .ai-blog-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_spacing }}px 0;
  }

  .ai-blog-title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.2;
  }

  .ai-blog-description-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
  }

  .ai-blog-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-blog-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-blog-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-blog-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-image-container-{{ ai_gen_id }}">
    <div class="ai-blog-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-blog-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
        <div class="ai-blog-empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      {% endif %}

      {% if block.settings.show_overlay %}
        <div class="ai-blog-image-overlay-{{ ai_gen_id }}"></div>
      {% endif %}
    </div>
  </div>

  {% if block.settings.title != blank or block.settings.description != blank %}
    <div class="ai-blog-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-blog-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-blog-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

