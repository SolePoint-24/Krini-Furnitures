{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-steps-flow-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-steps-flow-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-steps-flow-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-steps-flow-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-steps-flow-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-steps-flow-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: {{ block.settings.step_gap }}px;
    position: relative;
  }

  .ai-steps-flow-step-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
  }

  .ai-steps-flow-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.icon_background }};
    border: {{ block.settings.icon_border_width }}px solid {{ block.settings.icon_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    position: relative;
    z-index: 2;
  }

  .ai-steps-flow-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: 600;
    color: {{ block.settings.number_color }};
  }

  .ai-steps-flow-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size | times: 0.5 }}px;
    height: {{ block.settings.icon_size | times: 0.5 }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-steps-flow-step-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.step_title_size }}px;
    color: {{ block.settings.step_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
  }

  .ai-steps-flow-step-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.step_description_size }}px;
    color: {{ block.settings.step_description_color }};
    margin: 0;
    opacity: 0.7;
    line-height: 1.5;
  }

  .ai-steps-flow-arrow-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.icon_size | divided_by: 2 }}px;
    left: calc(50% + {{ block.settings.icon_size | divided_by: 2 }}px + 10px);
    right: calc(-50% + {{ block.settings.icon_size | divided_by: 2 }}px - 10px);
    height: 2px;
    background-color: {{ block.settings.arrow_color }};
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .ai-steps-flow-arrow-{{ ai_gen_id }}::after {
    content: '';
    width: 0;
    height: 0;
    border-left: {{ block.settings.arrow_size }}px solid {{ block.settings.arrow_color }};
    border-top: {{ block.settings.arrow_size | divided_by: 2 }}px solid transparent;
    border-bottom: {{ block.settings.arrow_size | divided_by: 2 }}px solid transparent;
    position: absolute;
    right: -{{ block.settings.arrow_size }}px;
  }

  .ai-steps-flow-step-{{ ai_gen_id }}:last-child .ai-steps-flow-arrow-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 989px) {
    .ai-steps-flow-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }

    .ai-steps-flow-step-{{ ai_gen_id }}:nth-child(3) .ai-steps-flow-arrow-{{ ai_gen_id }},
    .ai-steps-flow-step-{{ ai_gen_id }}:nth-child(5) .ai-steps-flow-arrow-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-steps-flow-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.step_gap | times: 1.5 }}px;
    }

    .ai-steps-flow-arrow-{{ ai_gen_id }} {
      top: auto;
      left: 50%;
      right: auto;
      width: 2px;
      height: {{ block.settings.step_gap | times: 1.5 }}px;
      transform: translateX(-50%);
      background-color: {{ block.settings.arrow_color }};
      margin-top: 16px;
    }

    .ai-steps-flow-arrow-{{ ai_gen_id }}::after {
      border-left: {{ block.settings.arrow_size | divided_by: 2 }}px solid transparent;
      border-right: {{ block.settings.arrow_size | divided_by: 2 }}px solid transparent;
      border-top: {{ block.settings.arrow_size }}px solid {{ block.settings.arrow_color }};
      border-bottom: none;
      right: auto;
      bottom: -{{ block.settings.arrow_size }}px;
      left: 50%;
      transform: translateX(-50%);
    }

    .ai-steps-flow-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-steps-flow-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-steps-flow-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-steps-flow-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-steps-flow-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-steps-flow-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-steps-flow-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-steps-flow-grid-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign step_title_key = 'step_' | append: i | append: '_title'
          assign step_description_key = 'step_' | append: i | append: '_description'
          assign step_icon_key = 'step_' | append: i | append: '_icon'
          
          assign step_title = block.settings[step_title_key]
          assign step_description = block.settings[step_description_key]
          assign step_icon = block.settings[step_icon_key]
        %}

        <div class="ai-steps-flow-step-{{ ai_gen_id }}">
          <div class="ai-steps-flow-icon-wrapper-{{ ai_gen_id }}">
            {% if block.settings.display_style == 'numbers' %}
              <span class="ai-steps-flow-number-{{ ai_gen_id }}">{{ i }}</span>
            {% else %}
              {% case step_icon %}
                {% when 'search' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                  </svg>
                {% when 'heart' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                  </svg>
                {% when 'cart' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                  </svg>
                {% when 'check' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                {% when 'package' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path d="M16.5 9.4 7.55 4.24"></path>
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                    <line x1="12" y1="22.08" x2="12" y2="12"></line>
                  </svg>
                {% when 'star' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                  </svg>
                {% when 'user' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                {% when 'settings' %}
                  <svg class="ai-steps-flow-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M12 1v6m0 6v6m5.2-13.2 4.2-4.2m-4.2 14.4 4.2 4.2M1 12h6m6 0h6m-13.2 5.2-4.2 4.2m4.2-14.4-4.2-4.2"></path>
                  </svg>
                {% else %}
                  <span class="ai-steps-flow-number-{{ ai_gen_id }}">{{ i }}</span>
              {% endcase %}
            {% endif %}
          </div>

          {% if step_title != blank %}
            <h3 class="ai-steps-flow-step-title-{{ ai_gen_id }}">{{ step_title }}</h3>
          {% endif %}

          {% if step_description != blank %}
            <p class="ai-steps-flow-step-description-{{ ai_gen_id }}">{{ step_description }}</p>
          {% endif %}

          <div class="ai-steps-flow-arrow-{{ ai_gen_id }}"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

