<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    {{ 'aos.css' | asset_url | stylesheet_tag }}
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body
    class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}"
    style="overflow-x:hidden"
  >
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}
    {{ 'swiper-bundle.min.js' | asset_url | script_tag: 'defer' }}
{{ 'aos.js' | asset_url | script_tag: 'defer' }}
    <script src="{{ 'compare.js' | asset_url }}" defer="defer"></script>
    {% comment %} <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
  document.addEventListener('DOMContentLoaded', function() {
    // 1. Find all elements that are a Shopify section
    //    (They almost always have the class 'shopify-section')
    const allSections = document.querySelectorAll('.shopify-section');

    // 2. Loop through each section and give it the 'data-aos' attribute
    allSections.forEach(function(section) {
      // You can change 'fade-up' to 'fade-in', 'zoom-in', etc.
      section.setAttribute('data-aos', 'fade-up');
      section.setAttribute('data-aos-duration', '600'); // Optional: set duration
    });

    // 3. NOW initialize AOS, after all attributes are set
    AOS.init();
  });
</script> {% endcomment %}
  </body>
</html>
